#set ($layout = "default/www/default/layout/default.vm")
#set ($page_title = $seoPageTitle)

				<section id="warehouse-details">
				
					<div class="page-header" style="border-bottom: 0px;">
						<div style="float: left; font-size: 18px;"></div>
						<div style="float: right; text-align: right; font-size: 15px;">
							$wording.get("bo.common.date_create_label") $!warehouse.dateCreate | $wording.get("bo.common.date_update_label") $!warehouse.dateUpdate
						</div>
						<div style="clear: both;"></div>
					</div>

					<div class="widget">
						
						<div class="widget-header">
							<div style="float: left;">
								<i class="fa fa-pushpin"></i>
								<h3>$!mainContentTitle</h3>
							</div>
							<div style="float: right; padding-right: 15px; font-size: 15px;">
								<a href="$!urlBack" alt="" class="btn">$wording.get("bo.common.back_label")</a>&nbsp;<a href="$!warehouse.editUrl" class="btn btn-primary">$wording.get("bo.common.edit_label")</a>
							</div>
						</div>
						
						<div class="widget-content">
							<div style="width: 100%">
								<strong>$wording.get("bo.warehouse.code_label") :</strong> $!warehouse.code
							</div>
							<div style="width: 100%">
								<strong>$wording.get("bo.warehouse.name_label") :</strong> $!warehouse.name
							</div>
							<div style="width: 100%">
								<strong>$wording.get("bo.warehouse.description_label") :</strong> $!warehouse.description
							</div>
							<div style="width: 100%">
								<strong>$wording.get("bo.common.address_label")</strong> 
							</div>
							<div style="width: 100%">
								$!warehouse.address1
							</div>
							<div style="width: 100%">
								$!warehouse.postalCode $!warehouse.city
							</div>
							<div style="width: 100%">
								$!warehouse.country
							</div>
							<div style="width: 100%">
								<strong>$wording.get("common.geoloc.longitude_label")</strong> $!warehouse.longitude
							</div>
							<div style="width: 100%">
								<strong>$wording.get("common.geoloc.latitude_label")</strong> $!warehouse.latitude
							</div>
							<div style="width: 100%">
								<strong>$wording.get("bo.common.date_create_label"):</strong> $!warehouse.dateCreate
							</div>
							<div style="width: 100%">
								<strong>$wording.get("bo.common.date_update_label"):</strong> $!warehouse.dateUpdate
							</div>
						</div>
							
					</div>
			
					<div class="widget widget-nopad">
							
						<div class="widget-header">
							<i class="fa fa-list-alt"></i>
							<h3>$wording.get("bo.warehouse.associated_delivey_methods_label")</h3>
						</div>
						
						<div class="widget-content">
							<table class="table table-bordered table-striped">
								<thead>
									<tr>
										<th width="150px">$wording.get("bo.delivery_method.code_label")</th>
										<th width="200px">$wording.get("bo.delivery_method.name_label")</th>
										<th width="300px">$wording.get("bo.delivery_method.description_label")</th>
										<th width="150px">$wording.get("bo.common.actions_label")</th>
									</tr>
								</thead>
								<tbody>
									#foreach($deliveryMethod in $deliveryMethods)
									<tr>
										<td>${deliveryMethod.code}</td>
										<td>${deliveryMethod.name}</td>
										<td>${deliveryMethod.description}</td>
										<td><a href="${deliveryMethod.detailsUrl}" class="btn">$wording.get("bo.common.details_label")</a></td>
									</tr>
									#end
								</tbody> 
							</table>							
						</div>					
					</div>

				</section>

