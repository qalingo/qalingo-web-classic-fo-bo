#set ($layout = "default/www/default/layout/default.vm")
#set ($page_title = $seoPageTitle)

				<section id="delivery-method-list">
					<div class="page-header">
						<h1>$!mainContentTitle</h1>
					</div>
					<div style="float: right; padding-right: 15px; font-size: 15px;">
						<a href="$!urlAdd" class="btn btn-primary">$wording.get("bo.common.add_label")</a>
					</div>
					<div>
						#parse("../../_include/body-pagination-pagelistholder.vm")
						<div>
							<table class="table" style="width: 100%">
								<thead>
									<tr>
										<th width="120px">$wording.get("bo.delivery_method.code_label")</th>
										<th width="200px">$wording.get("bo.delivery_method.name_label")</th>
										<th width="350px">$wording.get("bo.delivery_method.description_label")</th>
										<th width="130px">$wording.get("bo.common.actions_label")</th>
									</tr>
								</thead>
								<tbody>
									#foreach($deliveryMethod in $pagedListHolder.pageList)
									<tr>
										<td>${deliveryMethod.code}</td>
										<td>${deliveryMethod.name}</td>
										<td>${deliveryMethod.description}</td>
										<td><a href="${deliveryMethod.detailsUrl}" class="btn">$wording.get("bo.common.details_label")</a>&nbsp;<a href="${deliveryMethod.editUrl}" class="btn">$wording.get("bo.common.edit_label")</a></td>
									</tr>
									#end
								</tbody>  
							</table> 
						</div>
					</div>
					
					<div style="clear: both;"></div>

				</section>
